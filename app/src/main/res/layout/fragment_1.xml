<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/nom"
        android:layout_width="228dp"
        android:layout_height="50dp"
        android:layout_marginTop="76dp"
        android:fontFamily="@font/poppins_medium"
        android:hint="Last name"
        android:textColor="#246EE9"
        android:textColorHint="#246EE9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/email"
        android:layout_width="228dp"
        android:layout_height="50dp"
        android:layout_marginTop="356dp"
        android:fontFamily="@font/poppins_medium"
        android:hint="Email"
        android:textColorHint="#246EE9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/datenaissance"
        android:layout_width="228dp"
        android:layout_height="50dp"
        android:layout_marginTop="216dp"
        android:fontFamily="@font/poppins_medium"
        android:hint="Birthday"
        android:textColorHint="#246EE9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/prenom"
        android:layout_width="228dp"
        android:layout_height="50dp"
        android:layout_marginTop="148dp"
        android:fontFamily="@font/poppins_medium"
        android:hint="First name"
        android:textColorHint="#246EE9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/phone"
        android:layout_width="228dp"
        android:layout_height="50dp"
        android:layout_marginTop="288dp"
        android:fontFamily="@font/poppins_medium"
        android:hint="Phone number"
        android:textColorHint="#246EE9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/textView"
        android:layout_width="200dp"
        android:layout_height="35dp"
        android:layout_marginStart="108dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/poppins_bold"
        android:text="Your informations"
        android:textColor="#246EE9"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button"
        android:layout_width="134dp"
        android:layout_height="44dp"
        android:layout_marginStart="136dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#246EE9"
        android:fontFamily="@font/poppins_medium"
        android:text="Submit"
        android:textColor="#FFFFFF"
        android:textColorHighlight="#246EE9"
        android:textColorLink=" #246EE9"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/synchronizeRadio" />

    <TextView
        android:id="@+id/synchronizeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/poppins_medium"
        android:text="Wanna synchronize data?"
        android:textColor="#246EE9"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hobbiesRadioGroup" />

    <RadioButton
        android:id="@+id/synchronizeRadio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/poppins_medium"
        android:text="Synchronize data"
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/synchronizeTextView" />


    <RadioGroup
        android:id="@+id/hobbiesRadioGroup"
        android:layout_width="247dp"
        android:layout_height="59dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2">

        <RadioButton
            android:id="@+id/readingRadio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/poppins_medium"
            android:text="Reading"
            android:textColorHighlight="#3F51B5" />

        <RadioButton
            android:id="@+id/sportRadio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/poppins_medium"
            android:text="Sport" />

        <RadioButton
            android:id="@+id/musicRadio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/poppins_medium"
            android:text="Music" />

    </RadioGroup>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="217dp"
        android:layout_height="22dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/poppins_medium"
        android:text="Hobbies"
        android:textColor="#246EE9"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.469"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/email" />


</androidx.constraintlayout.widget.ConstraintLayout>



